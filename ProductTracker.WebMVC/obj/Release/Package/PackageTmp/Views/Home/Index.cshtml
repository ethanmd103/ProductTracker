@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Ethan's Product Tracker </h1>
    <p class="lead">This is an application designed to track both the initial purchase and the resale of a variety of products. </p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Products</h2>
        <p>
            Track all products.
        </p>
        <a class="btn btn-primary btn-lg" href="~/Product/Index"> Go to Products</a>
    </div>
    <div class="col-md-4">
        <h2>Purchases</h2>
        <p>Track the initial purchase's of items. </p>
        <a class="btn btn-primary btn-lg" href="~/Purchase/Index"> Go to Purchase's</a>
    </div>

    <div class="col-md-4">
        <h2>Resales</h2>
        <p>Track the aftermarket resale of items. </p>
        <a class="btn btn-primary btn-lg" href="~/Resell/Index"> Go to Resales</a>
    </div>
</div>